CREATE SCHEMA PUBLIC AUTHORIZATION DBA
CREATE MEMORY TABLE JOB(ID INTEGER NOT NULL PRIMARY KEY,AMOUNTPERHOUR REAL,DESCRIPTION VARCHAR(255),JOBSTATUSTYPE INTEGER,TITLE VARCHAR(255),ACCEPTEDHIREE_ID INTEGER,HIRER_ID INTEGER)
CREATE MEMORY TABLE AUTHENTICATION(ID INTEGER NOT NULL PRIMARY KEY,LIMITDATE LONGVARBINARY,SESSIONID VARCHAR(255),USER_ID INTEGER)
CREATE MEMORY TABLE USER(ID INTEGER NOT NULL PRIMARY KEY,EMAIL VARCHAR(255),FIRSTNAME VARCHAR(255),LASTNAME VARCHAR(255),NATIONALIDENTITY VARCHAR(255),PASSWORD VARCHAR(255),JOB_ID INTEGER,CONSTRAINT FK_USER_JOB_ID FOREIGN KEY(JOB_ID) REFERENCES JOB(ID))
CREATE MEMORY TABLE NOTIFICATION(ID INTEGER NOT NULL PRIMARY KEY,DESCRIPTION VARCHAR(255),NOTIFICATIONTYPE INTEGER,HIREE_ID INTEGER,HIRER_ID INTEGER,JOB_ID INTEGER,CONSTRAINT FK_NOTIFICATION_HIRER_ID FOREIGN KEY(HIRER_ID) REFERENCES USER(ID),CONSTRAINT FK_NOTIFICATION_JOB_ID FOREIGN KEY(JOB_ID) REFERENCES JOB(ID),CONSTRAINT FK_NOTIFICATION_HIREE_ID FOREIGN KEY(HIREE_ID) REFERENCES USER(ID))
CREATE MEMORY TABLE JOB_USER(JOB_ID INTEGER NOT NULL,HIREES_ID INTEGER NOT NULL,PRIMARY KEY(JOB_ID,HIREES_ID),CONSTRAINT FK_JOB_USER_HIREES_ID FOREIGN KEY(HIREES_ID) REFERENCES USER(ID),CONSTRAINT FK_JOB_USER_JOB_ID FOREIGN KEY(JOB_ID) REFERENCES JOB(ID))
CREATE MEMORY TABLE USER_JOB(USER_ID INTEGER NOT NULL,JOBS_ID INTEGER NOT NULL,PRIMARY KEY(USER_ID,JOBS_ID),CONSTRAINT FK_USER_JOB_JOBS_ID FOREIGN KEY(JOBS_ID) REFERENCES JOB(ID),CONSTRAINT FK_USER_JOB_USER_ID FOREIGN KEY(USER_ID) REFERENCES USER(ID))
CREATE MEMORY TABLE USER_NOTIFICATION(USER_ID INTEGER NOT NULL,NOTIFICATIONS_ID INTEGER NOT NULL,PRIMARY KEY(USER_ID,NOTIFICATIONS_ID),CONSTRAINT FK_USER_NOTIFICATION_NOTIFICATIONS_ID FOREIGN KEY(NOTIFICATIONS_ID) REFERENCES NOTIFICATION(ID),CONSTRAINT FK_USER_NOTIFICATION_USER_ID FOREIGN KEY(USER_ID) REFERENCES USER(ID))
CREATE MEMORY TABLE SEQUENCE(SEQ_NAME VARCHAR(50) NOT NULL PRIMARY KEY,SEQ_COUNT NUMERIC(38))
ALTER TABLE JOB ADD CONSTRAINT FK_JOB_HIRER_ID FOREIGN KEY(HIRER_ID) REFERENCES USER(ID)
ALTER TABLE JOB ADD CONSTRAINT FK_JOB_ACCEPTEDHIREE_ID FOREIGN KEY(ACCEPTEDHIREE_ID) REFERENCES USER(ID)
ALTER TABLE AUTHENTICATION ADD CONSTRAINT FK_AUTHENTICATION_USER_ID FOREIGN KEY(USER_ID) REFERENCES USER(ID)
